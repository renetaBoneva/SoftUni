<!-- Starts Main Section -->
<main>
    <div class="container">
        <div class="col-9">
            {{#if isPosts}}
            <!-- Start Pet Photos Post Section -->
            {{#each allPhotoPosts}}
            <div class="card">
                <!-- Start User Details and Image Location -->
                <div class="top">
                    <div class="userDetails">
                        <!-- Link to User Profile Page -->
                            {{#each owner}}
                            <a href="/profiles/{{_id}}">
                            {{/each}}
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img src="{{image}}">
                                    </div>
                                </div>
                            </div>
                        </a>
                        <h3>
                            <!-- Link to User Profile Page -->
                            <p>
                                <!-- show user username -->
                                {{#each owner}}
                                {{username}}
                                {{/each}}
                            </p>
                            <!-- photo's location -->
                            <span>{{location}}</span>
                        </h3>
                    </div>
                </div>

                <!-- Start Pet Photo -->
                <div class="imgBx">
                    <img src="{{image}}" alt="post" class="cover">
                </div>
                <!-- Name of Pet -->
                <h5 class="petName">Name: {{name}}</h5>
                <!-- Age of Pet -->
                <h5 class="petAge">Age: {{age}}</h5>
                <!-- Link to Photo Details Page -->
                <a href="/photos/{{_id}}/details" id="see-details">
                    <h4 class="details">See details</h4>
                </a>
            </div>
            {{/each}}
            {{else}}
            <!--If there are no photo yet!-->
            <article class="not-available-photo">
                <h1>No photo posts yet.</h1>
            </article>
            {{/if}}
        </div>

    </div>
</main>