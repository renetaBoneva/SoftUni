<form action="#" method="" class="cat-form" enctype="multipart/form-data">
    <h2>Edit Cat</h2>
    <label for="name">Name</label>
    <input type="text" id="name" value="{{name}}" name="{{name}}">
    <label for="description">Description</label>
    <textarea id="description" name="{{description}}">{{description}}</textarea>
    <label for="image">Image</label>
    <input type="text" id="image" name="{{img}}">
    <label for="group">Breed</label>
    <select id="group" name="{{breed}}">
        <option value="Fluffy Cat">{{breed}}</option>
    </select>
    <button onClick="location.href='/'">Edit Cat</button>
</form>