<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/styles/styles.css" />
    <title>Home Page</title>
</head>

<body>
    <div id="wrapper">
        {{#if err}}
        <div>
            <div class="errorContainer">
                <p>{{err}}</p>
            </div>
        </div>
        {{/if}}

        <header>
            <!-- Navigation -->
            <nav>
                <div>
                    <a href="/">Home</a>
                    <a href="/animals">Dashboard</a>
                    <a href="/animals/search">Search</a>
                </div>

                {{#if isAuthenticated}}
                <!-- Logged-in users -->
                <div class="user">
                    <a href="/animals/create">Add Animal</a>
                    <a href="/logout">Logout</a>
                </div>
                {{else}}
                <!-- Guest users -->
                <div class="guest">
                    <a href="/login">Login</a>
                    <a href="/register">Register</a>
                </div>
                {{/if}}
            </nav>
        </header>

        {{{body}}}

        <footer>
            <p>@Friendly World</p>
        </footer>
    </div>
</body>

</html>