<main>
    <section id="my-posts">
        <h1>My post</h1>

        <div class="my-container">
            {{#if posts}}
            <!-- If there are own posts in the database display each of them -->
            {{#each posts}}
            <div class="my-card">
                <div class="card-header">
                    <img src="{{this.image}}" />
                </div>
                <div class="card-body">
                    <span class="tag tag-teal">Species: {{this.species}}</span>
                    <h4>
                        Name: {{this.name}}
                    </h4>
                    <div class="user">
                        <div class="user-info">
                            <h5>Author: {{user.firstName}} {{user.lastName}}</h5>
                            <small>Rating of votes: {{this.votes.length}}</small>
                            <a href="/posts/{{this._id}}/details" class="details_btn">Details</a>

                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <!-- If there are still no own posts in the database display: -->
            <div class="no-posts">
                <p class="no-offer">There are no own posts yet...</p>
            </div>
            {{/if}}
        </div>
    </section>

</main>