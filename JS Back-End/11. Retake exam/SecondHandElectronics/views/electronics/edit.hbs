<section id="editPage">
    <form id='editForm' method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{el.name}}">

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{el.type}}">

        <label for="production">Year of Production:</label>
        <input type="number" id="production" name="production" value="{{el.production}}">

        <label for="exploitation">Years of Exploitation:</label>
        <input type="number" id="exploitation" name="exploitation" value="{{el.exploitation}}">

        <label for="damages">Damages:</label>
        <input type="text" id="demages" name="damages"
            value="{{el.damages}}">

        <label for="image">Image:</label>
        <input type="text" id="image" name="image"
            value="{{el.image}}">

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{el.price}}">

        <label for="description">Description:</label>
        <input type="text" id="description" name="description"
            value="{{el.description}}">

        <input type="submit" class="edit" value="Edit Offer">
    </form>
</section>