<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" method="GET">
            <input type="text" class="search-game" name="name" {{#if name}} value="{{name}}" {{/if}} placeholder="Search here...">
            {{> platformSelect platforms=platforms}}
            <button type="submit" class="btn-search">Search</button>
        </form>
        {{#if games}}
        <div class="search-result">
            <div class="search-list">

                {{> gameCard games=games}}
            </div>
        </div>
        {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/if}}
    </section>
</main>