<main>
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Course</h1>
            <form method="POST">
                <label>Title:</label>
                <input name="title" type="text" id="title" value="{{#if inputData.title}}{{inputData.title}}{{else}}{{title}}{{/if}}">

                <label>Type:</label>
                <input name="type" type="text" id="type" value="{{#if inputData.type}}{{inputData.type}}{{else}}{{type}}{{/if}}">

                <label>Certificate:</label>
                <input name="certificate" type="text" id="certificate" value="{{#if inputData.certificate}}{{inputData.certificate}}{{else}}{{certificate}}{{/if}}">

                <label>Image:</label>
                <input name="image" type="text" id="image" placeholder="http://..."
                    value="{{#if inputData.image}}{{inputData.image}}{{else}}{{image}}{{/if}}">

                <label>Description:</label>
                <textarea id="content"
                    name="description">{{#if inputData.description}}{{inputData.description}}{{else}}{{description}}{{/if}}</textarea>

                <label>Price:</label>
                <input name="price" type="number" id="price" value="{{#if inputData.price}}{{inputData.price}}{{else}}{{price}}{{/if}}">

                <input type="submit" id="btn" value="Edit">
            </form>
        </div>
    </section>
</main>